{
  "id": "approval-workflow-extension",
  "name": "Schvalování Dokumentace",
  "version": "1.0.0",
  "description": "Extension pro správu schvalovacích workflow projektové dokumentace v Trimble Connect",
  "author": "Tvoje Společnost",
  "license": "MIT",
  "homepage": "https://github.com/tvoje-username/trimble-approval-workflow",
  "repository": {
    "type": "git",
    "url": "https://github.com/tvoje-username/trimble-approval-workflow.git"
  },
  "keywords": [
    "trimble",
    "connect",
    "extension",
    "approval",
    "workflow",
    "documentation",
    "bcf",
    "bim"
  ],
  "engines": {
    "trimble-connect": ">=2022.1.0"
  },
  "permissions": [
    "viewer:interact",
    "viewer:comment",
    "core:read",
    "core:write",
    "topics:read",
    "topics:write",
    "organizer:read",
    "organizer:write",
    "property-set:read",
    "project:read"
  ],
  "extensions": [
    {
      "type": "project-extension",
      "name": "Schvalování Dokumentace",
      "url": "./index.html",
      "icon": "./assets/icon-192.png",
      "title": "Spravuj schvalovací procesy pro projektovou dokumentaci",
      "description": "Vytvářej schvalovací řetězce s automatickými BCF notifikacemi a přesunem dokumentace",
      "category": "Project Management"
    }
  ],
  "requiredCapabilities": [
    "core-service",
    "topics-service",
    "organizer-service"
  ],
  "optionalCapabilities": [
    "property-set-service",
    "model-service"
  ],
  "sdkVersion": "2.0.0",
  "compatibility": {
    "browsers": ["Chrome 90+", "Edge 90+", "Firefox 88+", "Safari 14+"],
    "platforms": ["Web"],
    "minConnectVersion": "2022.1.0"
  },
  "scopes": [
    "project.read",
    "project.write",
    "project.topics.read",
    "project.topics.write",
    "project.organizer.read",
    "project.organizer.write"
  ],
  "oauth": {
    "redirectUri": "/oauth-callback.html",
    "scopes": [
      "project.read",
      "project.write",
      "project.topics.read",
      "project.topics.write"
    ]
  },
  "settings": {
    "autoNotify": true,
    "defaultPriority": "high",
    "defaultStatus": "New",
    "archiveFolder": "Schválené",
    "logLevel": "info"
  }
}
